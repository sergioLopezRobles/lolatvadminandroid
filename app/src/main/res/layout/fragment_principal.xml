<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".vista.principal">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#EEEEEE"
                android:id="@+id/llEncabezadoPrincipal">

                <TextView
                    android:textAlignment="center"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="E"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:id="@+id/tvEnviadoPaginaClienteContratoPrincipal"
                    android:background="@drawable/textview_border"/>

                <TextView
                    android:textAlignment="center"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="P"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:id="@+id/tvFormaPagoClienteContratoPrincipal"
                    android:background="@drawable/textview_border"
                    />

                <TextView
                    android:id="@+id/tvDiasAtrasoContratoPrincipal"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="D. A"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:background="@drawable/textview_border" />

                <TextView
                    android:id="@+id/tvIdContratoClienteContratoPrincipal"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="CONTRATO"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:textAlignment="textStart"
                    android:maxLength="15"
                    android:background="@drawable/textview_border"/>

                <TextView
                    android:id="@+id/tvLocalidadClienteContratoPrincipal"
                    android:textAlignment="textStart"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="LOCALIDAD"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:background="@drawable/textview_border"/>

                <TextView
                    android:id="@+id/tvColoniaClienteContratoPrincipal"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="COLONIA"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:textAlignment="textStart"
                    android:background="@drawable/textview_border"/>

                <TextView
                    android:id="@+id/tvCalleClienteContratoPrincipal"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="CALLE"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:textAlignment="textStart"
                    android:background="@drawable/textview_border"/>

                <TextView
                    android:textAlignment="textStart"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="#"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:id="@+id/tvNumeroClientePrincipal"
                    android:background="@drawable/textview_border"/>

                <TextView
                    android:id="@+id/tvNombreClienteContratoPrincipal"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="NOMBRE"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:textAlignment="textStart"
                    android:background="@drawable/textview_border"
                    />

                <TextView
                    android:id="@+id/tvUltimoAbonoContratoPrincipal"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="ULTIMO ABONO"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:textAlignment="textStart"
                    android:background="@drawable/textview_border"
                    />

                <TextView
                    android:id="@+id/tvNotaClienteContratoPrincipal"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="NOTA"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:enabled="false"
                    android:textAlignment="textStart"
                    android:background="@drawable/textview_border"/>

                <TextView
                    android:id="@+id/tvObservacionesClienteContratoPrincipal"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="O"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:background="@drawable/textview_border"/>

            </LinearLayout>

            <ListView
                android:id="@+id/lvListaContratos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/llEncabezadoPrincipal"
                android:scrollbars="horizontal|vertical"
                android:divider="@drawable/textview_border"/>
        </LinearLayout>
    </HorizontalScrollView>
    <ru.dimorinny.floatingtextbutton.FloatingTextButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        app:floating_left_icon="@drawable/ic_add_circle"
        app:floating_background_color="#00FFFFFF"
        android:background="@drawable/botonredondo"
        app:floating_title="Nuevo"
        app:floating_title_color="@color/white"
        android:layout_margin="16dp"
        android:visibility="gone"
        android:stateListAnimator="@null"
        />
</FrameLayout>
